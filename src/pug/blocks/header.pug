	body
		header
			.container-fluid.container-lg.py-2
				.row.mt-md-2.mt-0
					.logo.col-md-2.col-5
						a(href="https://roslovets-sandbox.ru")
							img(src="./assets/img/Header-logo.png")
					.search.col-xl-6.col-md-5.col-5.offset-md-2.px-0.align-items-center.d-none.d-md-flex
						form(action="#")
