						p Food market
					.buisness-hours.col-md-2.d-none.d-md-block
						.buisness-hours__phone
							p +7 000 000 00 00
						.buisness-hours__hours
							p Работаем с 9:00 до 21:00
					.delivery.col-md-2.d-none.d-md-block
						img(src="./assets/img/delivery-truck.png" alt="delivery-truck")
						p Доставка в день заказа
					.back-call.col-xl-2.col-md-3.mb-2.d-none.d-md-block
						button Заказать звонок
					.mobile-block.d-block.d-md-none.col-7
						.row.justify-content-end
							a.phone-mobile.col-12(href="tel:+70000000000") 
								p +7 000 000 00 00
							a.cart.d-flex.justify-content-end.align-items-center
								i.fas.fa-shopping-basket
							.logIn
								a(href="#")
									img(src="./assets/img/user.png" alt="user")
							.soc.justify-content-between.d-flex
								a(href="https://vk.com")
									img(src="./assets/img/vk.png" alt="vk")
								a(href="https://facebook.com")
									img(src="./assets/img/facebook.png" alt="facebook")
								a(href="https://instagram.com")
									img(src="./assets/img/instagram.png" alt="instagram")
							.search.col-12.d-flex.align-items-center.px-0.justify-content-end.mt-2
								form(action="#")
									label.search-input
										input.search(type="search")
										i.fas.fa-search.search-icon
			nav.nav
				.container-fluid.container-lg
					.row.align-items-center
						.catalog.col-md-3.col-6
							i.fas.fa-bars
							a(href="#") Каталог товаров
						.navbar.navbar-expand-md.navbar-light.col-md-7.col-6
							button.navbar-toggler.ml-auto(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
								i.fas.fa-bars(style="color:white;")
							.collapse.navbar-collapse#navbarSupportedContent
								ul.navbar-nav.mr-auto.d-flex.justify-content-around
									each el in menu
										li.nav-item
											a.nav-link(href="#") #{el}
						a.cart.col-md-2.col-6.justify-content-end.d-md-flex.d-none(href="#")
							i.fas.fa-shopping-basket
							p Мои покупки
